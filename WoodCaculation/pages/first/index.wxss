#inputs {
  width: 163px;
  height: 160px;
  line-height: 40px;
  margin-left: 10px;
  margin-top: 10px;
  box-shadow:0 0 10px #CCFFFF;
  background-color: #CCFFFF;
  padding: 0 10px;
}
text {
  font-size: 14px;
  font-family: '宋体';  
  float: left;
}
input {
  font-size: 14px;  
  width: 70px;
  height: 25px;
  float: left;
  margin-top: 7px;
  border-bottom: 1px #DDDDDD solid;  
}
#add {
  position: absolute;
  top: 10px;
  font-size: 14px;
  right: 10px;
  height: 30px;  
  width: calc(100% - 10px - 10px - 183px - 10px);
  line-height: 30px;
  box-shadow:0 0 10px #CCFFFF;
  background-color: #CCFFFF;
}
#summary {
  position: absolute;
  top: 50px;
  font-size: 14px;
  right: 10px;
  padding: 10px;
  width: calc(100% - 10px - 10px - 183px - 10px - 10px - 10px);
  height: 100px;
  line-height: 25px;
  text-align: center;
  box-shadow:0 0 10px #CCFFFF;  
  border-radius: 5px;
  background-color: #CCFFFF;
}
.summary {
  clear: left;
  margin-left: 40px;
}
.summaryTitle {
  margin-left: 10px;
} 
scroll-view {
  position: absolute;
  margin-top: 10px;
  left: 10px;
  padding: 10px;
  width: calc(100% - 10px - 10px - 10px - 10px);
  height: calc(100% - 10px - 160px - 10px - 10px - 10px - 10px); 
  border-radius: 5px;
  background-color: #CCFFFF;   
}
.item {
  font-size: 14px;
  border-bottom: 1px solid #DDDDDD;
  padding: 5px 0;
}